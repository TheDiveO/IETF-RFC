\define rfc-tt(num) RFC&nbsp;$num$: <<rfc-title>>

\define rfc(num)
<$list
	filter="[[$:/rfcindex/rfc/$num$]]"
><$set
	name="rfc-title"
    value={{!!rfc-title}}
><$set
	name="tv-wikilink-tooltip"
    value=<<rfc-tt num:$num$>>
><$link
	to="RFC $num$"
    class="rfc-link rfc-link-rfc rfc-link-rfc-normal"
>RFC&nbsp;$num$ <span
	class="ietf-rfc-link-rfc-title"
><<ietf-rfc-lquo>><$transclude field="rfc-title"/><<ietf-rfc-rquo>></span></$link></$set></$set></$list>
\end

\define rfcs(num)
<$list
	filter="[[$:/rfcindex/rfc/$num$]]"
><$set
	name="rfc-title"
    value={{!!rfc-title}}
><$set
	name="tv-wikilink-tooltip"
    value=<<rfc-tt num:$num$>>
><$link
	to="RFC $num$"
    class="rfc-link rfc-link-rfc rfc-link-rfc-short"
>RFC&nbsp;$num$</$link></$set></$set></$list>
\end